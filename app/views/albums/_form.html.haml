= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :artist_id
    = f.select :artist_id, options_from_collection_for_select(@artists, 'id', 'name')
  .actions
    = f.submit 'Save'
